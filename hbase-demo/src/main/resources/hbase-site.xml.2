<configuration>

  <!--配置hbase使用hdfs地址-->
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://mrcluster/mr_hbase2</value>
  </property>

  <!--配置hbase使用分布式-->
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>

  <!--配置zookeeper对应结点-->
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>node203.vipcloud,node204.vipcloud,node205.vipcloud</value>
  </property>
  
  <property>
    <name>hbase.regionserver.handler.count</name>
    <value>100</value>
  </property>
  
 <property>
    <name>dfs.client.read.shortcircuit</name>
    <value>true</value>
  </property>

	<property>
		<name>dfs.domain.socket.path</name>
		<!--must create dir path -->
		<value>${hadoop.tmp.dir}/data/data1/dn._PORT</value>
	</property>
  <property>
    <name>dfs.client.read.shortcircuit.skip.checksum</name>
    <value>true</value>
  </property>

  <property>
    <name>hbase.regionserver.checksum.verify</name>
    <value>true</value>
  </property>
  
  <property>
    <name>zookeeper.znode.parent</name>
    <value>/mr_hbase2</value>
  </property>
  
  <property>
    <name>hbase.ipc.warn.reponse.time</name>
    <value>3000</value>
  </property>

  <property>
    <name>dfs.client.socketcache.capacity</name>
    <value>8192</value>
  </property>
  
  <property>
    <name>hbase.master.assignment.timeoutmonitor.timeout</name>
    <value>120000</value>
    <description>ms, default is 1800000</description>
  </property>
  
  <property>
    <name>dfs.read.prefetch.size</name>
    <value>268435456</value>
    <description>default is 10*defaultBlockSize</description>
  </property>  
  
  <!-- -->
	<property>
		<name>zookeeper.session.timeout</name>
		<value>180000</value>
	</property>
</configuration>
